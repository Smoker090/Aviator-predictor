  <script>
    const crashHistory = ["1.01", "1.03", "1.09", "1.34", "3.76", "1.67", "1.79", "18.41", "5.6", "8.47"];
    let countdown = 30;
    let interval;

    function checkAccess() {
      const code = document.getElementById("accessCode").value;
      if (code === "crusheraccess2025") {
        document.getElementById("signalArea").classList.remove("hidden");
        generateSignal();
        startCountdown();
      } else {
        alert("Incorrect password.");
      }
    }

    function generateSignal() {
      const recent = crashHistory.slice(0, 5).map(x => parseFloat(x));
      const avg = recent.reduce((a, b) => a + b, 0) / recent.length;
      const last = parseFloat(crashHistory[0]);

      let risk = (last < 1.5 && avg < 2.0) ? "High" : "Low";
      let nextMultiplier = (risk === "High") ? "1.20x" : "2.80x";
      let confidence = Math.floor(Math.random() * 10 + 90) + "%";

      document.getElementById("multiplier").textContent = nextMultiplier;
      document.getElementById("confidence").textContent = confidence;
      document.getElementById("risk").textContent = risk;

      // Simulate new crash point
      const newCrash = (Math.random() * 10).toFixed(2);
      crashHistory.unshift(newCrash);
      crashHistory.pop();
    }

    function startCountdown() {
      interval = setInterval(() => {
        countdown--;
        document.getElementById("countdown").textContent = countdown + "s";
        if (countdown <= 0) {
          countdown = 30;
          generateSignal();
        }
      }, 1000);
    }
  </script>
